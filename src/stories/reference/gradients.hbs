

{{#each gradients }}
  <div class="o-grid__item">
    <article class="c-card c-card--default">
      <div class="c-card__img u-grad-{{ join this "-" }}">
      </div>
      <div class="c-card__content">
          <div class="c-card__info">
              <h3 class="c-card__title">
                {{#each this }}{{this}} {{/each}}
              </h3>
          </div>
          <div class="c-card__info">
            <dl class="o-dl">
              <dt>class</dt>
              <dd><code>.u-grad-{{ join this "-" }}</code></dd>              
            </dl>
          </div>
      </div>
    </article>

  </div>

{{/each}}
