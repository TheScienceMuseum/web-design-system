                {{/each}}
              </ul>
            </li>
            {{else}}
            <li class="menu-item"><a target="_self" href="{{url}}">{{name}}</a></li>
            {{/if}}
            {{/each}}
          </ul>
        </li>
        {{else}}
        <li class="menu-item"><a target="_self" href="{{url}}">{{name}}</a></li>
