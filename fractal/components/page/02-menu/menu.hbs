            <li class="menu-item menu-item-has-children" aria-haspopup="true">
              <a href="{{url}}">{{name}}</a>
              <button aria-expanded="false" class="dropdown-toggle">
                <span class="screen-readers">Expand child
                  menu</span></button>
              <ul class="sub-menu" hidden>
                {{#each items}}
