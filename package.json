{
  "name": "smg-design-system",
  "version": "0.1.0",
  "dependencies": {
    "@frctl/fractal": "^1.1.7",
    "@frctl/handlebars": "^1.1.5",
    "@frctl/mandelbrot": "^1.2.0",
    "include-media": "^1.4.9",
    "normalize-scss": "^7.0.1",
    "sass-between": "^0.3.2"
  },
  "scripts": {
    "start": "npm run watch",
    "dist": "run-s build minify dist:fractal",
    "dist:fractal": "fractal build",
    "deploy": "./deploy-to-gh-pages.sh",
    "postinstall": "npm run dist",
    "build": "run-p build:*",
    "build:css": "run-s build:css:*",
    "build:css:sass": "node-sass src/scss -o public/css/ --include-path node_modules --source-map-root file://${PWD}/ --source-map-embed true --error-bell",
    "build:css:prefix": "postcss --u autoprefixer -r public/css/*.css --map",
    "build:js": "browserify src/js/main.js > public/js/bundle.js",
    "build:svg": "svg-sprite --view --vscss --view-sprite=sprite.view.svg --symbol --symbol-example --symbol-sprite=sprite.symbol.svg --dest=public/assets/img/sprite src/svg/**/*.svg",
    "minify": "run-p minify:*",
    "minify:css": "postcss public/css/*.css -u cssnano --replace --map",
    "minify:js": "uglifyjs public/js/bundle.js -o public/js/bundle.js",
    "watch": "npm-run-all build --parallel watch:*",
    "watch:fractal": "fractal start --sync",
    "watch:css": "onchange 'src/**/*.scss' -- npm run build:css",
    "watch:js": "onchange 'src/**/*.js' -- npm run build:js",
    "watch:svg": "onchange 'src/svg/**/*.svg' -- npm run build:svg",
    "sassdoc": "sassdoc src --dest build/sassdoc"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "autoprefixer": "^9.5.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "cssnano": "^4.1.10",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "postcss": "^7.0.14",
    "postcss-cli": "^6.1.2",
    "sassdoc": "^2.5.1",
    "svg-sprite": "^1.5.0",
    "uglifyjs": "^2.4.11"
  },
  "jshintConfig": {
    "esversion": 6
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
          ]
        }
      ]
    ]
  },
  "browserslist": [
    "last 2 versions",
    "> 2%",
    "Edge >= 15",
    "IE >= 10",
    "safari >= 7"
  ]
}
